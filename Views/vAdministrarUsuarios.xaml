<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KynosPetClub.Views.vAdministrarUsuarios"
             Title="Administrar Usuarios"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header con tÃ­tulo y bÃºsqueda -->
        <StackLayout Grid.Row="0" Padding="20,10" Spacing="10" BackgroundColor="#F8F9FA">
            <Label Text="ðŸ‘¥ Administrar Usuarios"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#2C3E50"/>

            <SearchBar x:Name="searchBar"
                       Placeholder="ðŸ” Buscar por nombre, correo o rol..."
                       BackgroundColor="White"
                       TextChanged="searchBar_TextChanged"
                       PlaceholderColor="Gray"/>

            <!-- Contador de usuarios -->
            <Label x:Name="lblContador"
                   Text="Cargando usuarios..."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>

        <!-- Lista de usuarios -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="15,10">
                <CollectionView x:Name="cvUsuarios" ItemsSource="{Binding Usuarios}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,5">
                                <Frame Padding="20,15" 
                                       CornerRadius="12" 
                                       HasShadow="True"
                                       BackgroundColor="White">

                                    <!-- Vista normal del usuario -->
                                    <StackLayout Spacing="12">
                                        <!-- Header del usuario -->
                                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                                            <StackLayout Grid.Column="0" Spacing="4">
                                                <Label Text="{Binding NombreCompleto}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#2C3E50"/>
                                                <Label Text="{Binding correo}"
                                                       FontSize="14"
                                                       TextColor="#7F8C8D"/>
                                            </StackLayout>

                                            <!-- Badge del rol -->
                                            <Frame Grid.Column="1"
                                                   BackgroundColor="{Binding RolColor}"
                                                   Padding="8,4"
                                                   CornerRadius="12"
                                                   HasShadow="False">
                                                <Label Text="{Binding RolNombre}"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalTextAlignment="Center"/>
                                            </Frame>

                                            <!-- BotÃ³n editar -->
                                            <Button Grid.Column="2"
                                                    Text="âœï¸"
                                                    FontSize="16"
                                                    BackgroundColor="#3498DB"
                                                    TextColor="White"
                                                    CornerRadius="20"
                                                    WidthRequest="40"
                                                    HeightRequest="40"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="btnEditarUsuario_Clicked"/>
                                        </Grid>

                                        <!-- InformaciÃ³n adicional -->
                                        <Grid ColumnDefinitions="Auto,*,Auto,*" ColumnSpacing="15">
                                            <Label Grid.Column="0" Text="ðŸ“…" FontSize="14"/>
                                            <Label Grid.Column="1" 
                                                   Text="{Binding FechaNacimiento}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                            <Label Grid.Column="2" Text="ðŸ“‹" FontSize="14"/>
                                            <Label Grid.Column="3" 
                                                   Text="{Binding PlanNombre}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </Grid>
                                    </StackLayout>
                                </Frame>

                                <!-- Panel de ediciÃ³n (separado) -->
                                <Frame IsVisible="{Binding EstaEditando}"
                                       Padding="20,15" 
                                       CornerRadius="12"
                                       HasShadow="True"
                                       BackgroundColor="#F8F9FA"
                                       Margin="0,0,0,10">

                                    <StackLayout Spacing="15">
                                        <Label Text="âœï¸ Editando Usuario"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#2C3E50"/>

                                        <!-- InformaciÃ³n bÃ¡sica (solo lectura) -->
                                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10" RowSpacing="10">
                                            <StackLayout Grid.Column="0">
                                                <Label Text="Nombre:" FontSize="12" TextColor="Gray"/>
                                                <Entry Text="{Binding nombre}" 
                                                       IsReadOnly="True"
                                                       BackgroundColor="#E9ECEF"/>
                                            </StackLayout>
                                            <StackLayout Grid.Column="1">
                                                <Label Text="Apellido:" FontSize="12" TextColor="Gray"/>
                                                <Entry Text="{Binding apellido}" 
                                                       IsReadOnly="True"
                                                       BackgroundColor="#E9ECEF"/>
                                            </StackLayout>
                                        </Grid>

                                        <StackLayout>
                                            <Label Text="Correo:" FontSize="12" TextColor="Gray"/>
                                            <Entry Text="{Binding correo}" 
                                                   IsReadOnly="True"
                                                   BackgroundColor="#E9ECEF"/>
                                        </StackLayout>

                                        <!-- Selector de rol -->
                                        <StackLayout>
                                            <Label Text="Rol:" FontSize="12" TextColor="Gray"/>
                                            <Picker ItemsSource="{Binding Source={x:Reference Name=cvUsuarios}, Path=BindingContext.RolesDisponibles}"
                                                    ItemDisplayBinding="{Binding NombreRol}"
                                                    SelectedItem="{Binding RolSeleccionado}"
                                                    BackgroundColor="White"
                                                    TextColor="Black"/>
                                        </StackLayout>

                                        <!-- Selector de plan -->
                                        <StackLayout>
                                            <Label Text="Plan:" FontSize="12" TextColor="Gray"/>
                                            <Picker ItemsSource="{Binding Source={x:Reference Name=cvUsuarios}, Path=BindingContext.PlanesDisponibles}"
                                                    ItemDisplayBinding="{Binding Nombre}"
                                                    SelectedItem="{Binding PlanSeleccionado}"
                                                    BackgroundColor="White"
                                                    TextColor="Black"/>
                                        </StackLayout>

                                        <!-- Botones de acciÃ³n -->
                                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                            <Button Grid.Column="0"
                                                    Text="ðŸ’¾ Guardar"
                                                    BackgroundColor="#27AE60"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="btnGuardarCambios_Clicked"/>
                                            <Button Grid.Column="1"
                                                    Text="âŒ Cancelar"
                                                    BackgroundColor="#E74C3C"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="btnCancelarEdicion_Clicked"/>
                                        </Grid>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>

        <!-- Loading indicator -->
        <ActivityIndicator x:Name="loadingIndicator"
                          Grid.Row="1"
                          IsVisible="False"
                          IsRunning="False"
                          Color="#3498DB"
                          Scale="1.5"/>

        <!-- Footer con botÃ³n volver -->
        <Button x:Name="btnVolver" 
                Grid.Row="2"
                Text="ðŸ”™ Volver al Perfil"
                BackgroundColor="#95A5A6"
                TextColor="White"
                CornerRadius="0"
                HeightRequest="50"
                FontSize="16"
                FontAttributes="Bold"
                Clicked="btnVolver_Clicked"/>
    </Grid>
</ContentPage>