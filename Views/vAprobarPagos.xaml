<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KynosPetClub.Views.vAprobarPagos"
             Title="Aprobar Pagos"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="20,10" Spacing="10" BackgroundColor="#F8F9FA">
            <Label Text="ðŸ’³ Aprobar Pagos"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#2C3E50"/>

            <SearchBar x:Name="searchBar"
                       Placeholder="ðŸ” Buscar por descripciÃ³n..."
                       BackgroundColor="White"
                       TextChanged="searchBar_TextChanged"
                       PlaceholderColor="Gray"/>

            <!-- Contador de comprobantes -->
            <Label x:Name="lblContador"
                   Text="Cargando comprobantes..."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>

        <!-- Lista de comprobantes -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="15,10">
                <CollectionView x:Name="cvComprobantes" ItemsSource="{Binding Comprobantes}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,5">
                                <Frame Padding="20,15" 
                                       CornerRadius="12" 
                                       HasShadow="True"
                                       BackgroundColor="White">

                                    <StackLayout Spacing="15">
                                        <!-- Header del comprobante -->
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                            <StackLayout Grid.Column="0" Spacing="4">
                                                <Label Text="{Binding Descripcion}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#2C3E50"/>
                                                <Label Text="{Binding FechaSubidaTexto}"
                                                       FontSize="12"
                                                       TextColor="Gray"/>
                                                <Label Text="{Binding UsuarioInfo}"
                                                       FontSize="14"
                                                       TextColor="#7F8C8D"/>
                                                <Label Text="{Binding ReservaInfo}"
                                                       FontSize="12"
                                                       TextColor="#95A5A6"/>
                                            </StackLayout>

                                            <!-- Badge del estado -->
                                            <Frame Grid.Column="1"
                                                   BackgroundColor="{Binding EstadoColor}"
                                                   Padding="8,4"
                                                   CornerRadius="12"
                                                   HasShadow="False">
                                                <Label Text="{Binding Estado}"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalTextAlignment="Center"/>
                                            </Frame>
                                        </Grid>

                                        <!-- Imagen del comprobante -->
                                        <Frame BackgroundColor="#F8F9FA"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               Padding="10">
                                            <StackLayout>
                                                <Label Text="ðŸ“Ž Comprobante de Pago"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#2C3E50"
                                                       HorizontalTextAlignment="Center"/>

                                                <Image Source="{Binding UrlArchivo}"
                                                       HeightRequest="200"
                                                       Aspect="AspectFit"
                                                       BackgroundColor="White">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer CommandParameter="{Binding .}"
                                                                              Tapped="OnImageTapped"/>
                                                    </Image.GestureRecognizers>
                                                </Image>

                                                <Label Text="ðŸ‘† Toca para ver en pantalla completa"
                                                       FontSize="10"
                                                       TextColor="Gray"
                                                       HorizontalTextAlignment="Center"/>
                                            </StackLayout>
                                        </Frame>

                                        <!-- Comentario admin (si existe) -->
                                        <Frame IsVisible="{Binding TieneComentarioAdmin}"
                                               BackgroundColor="#E3F2FD"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               Padding="10">
                                            <StackLayout>
                                                <Label Text="ðŸ’¬ Comentario del Administrador:"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="#1976D2"/>
                                                <Label Text="{Binding ComentarioAdmin}"
                                                       FontSize="12"
                                                       TextColor="#1976D2"/>
                                            </StackLayout>
                                        </Frame>

                                        <!-- Botones de acciÃ³n (solo para pendientes) -->
                                        <Grid ColumnDefinitions="*,*,*" 
                                              ColumnSpacing="10"
                                              IsVisible="{Binding EsPendiente}">
                                            <Button Grid.Column="0"
                                                    Text="âœ… Aprobar"
                                                    BackgroundColor="#4CAF50"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="btnAprobar_Clicked"/>

                                            <Button Grid.Column="1"
                                                    Text="âŒ Rechazar"
                                                    BackgroundColor="#F44336"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="btnRechazar_Clicked"/>

                                            <Button Grid.Column="2"
                                                    Text="ðŸ’¬ Comentar"
                                                    BackgroundColor="#FF9800"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    FontSize="12"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="btnComentar_Clicked"/>
                                        </Grid>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>

        <!-- Loading indicator -->
        <ActivityIndicator x:Name="loadingIndicator"
                          Grid.Row="1"
                          IsVisible="False"
                          IsRunning="False"
                          Color="#3498DB"
                          Scale="1.5"/>

        <!-- Footer con botÃ³n volver -->
        <Button x:Name="btnVolver" 
                Grid.Row="2"
                Text="ðŸ”™ Volver al Perfil"
                BackgroundColor="#95A5A6"
                TextColor="White"
                CornerRadius="0"
                HeightRequest="50"
                FontSize="16"
                FontAttributes="Bold"
                Clicked="btnVolver_Clicked"/>
    </Grid>
</ContentPage>