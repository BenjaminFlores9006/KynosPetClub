<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KynosPetClub.Views.vAsignarCitas"
             Title="Asignar Citas"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="20,10" Spacing="10" BackgroundColor="#F8F9FA">
            <Label Text="ðŸ‘¨â€âš•ï¸ Asignar Citas a Funcionarios"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#2C3E50"/>

            <SearchBar x:Name="searchBar"
                       Placeholder="ðŸ” Buscar por cliente, mascota o servicio..."
                       BackgroundColor="White"
                       TextChanged="searchBar_TextChanged"
                       PlaceholderColor="Gray"/>

            <Label x:Name="lblContador"
                   Text="Cargando reservas..."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>

        <!-- Lista de reservas -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="15,10">
                <CollectionView x:Name="cvReservas" ItemsSource="{Binding Reservas}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,5">
                                <Frame Padding="20,15" 
                                       CornerRadius="12" 
                                       HasShadow="True"
                                       BackgroundColor="White">

                                    <StackLayout Spacing="20">
                                        <!-- Header de la reserva -->
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                            <StackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="{Binding ServicioNombre}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#2C3E50"
                                                       Margin="0,0,0,2"/>
                                                <Label Text="{Binding ClienteNombre}"
                                                       FontSize="14"
                                                       TextColor="#7F8C8D"
                                                       Margin="0,0,0,2"/>
                                                <Label Text="{Binding MascotaNombre}"
                                                       FontSize="14"
                                                       TextColor="#95A5A6"
                                                       Margin="0,0,0,2"/>
                                            </StackLayout>

                                            <Frame Grid.Column="1"
                                                   BackgroundColor="{Binding EstadoColor}"
                                                   Padding="6,2"
                                                   CornerRadius="12"
                                                   HasShadow="False"
                                                   VerticalOptions="Start">
                                                <Label Text="{Binding Estado}"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalTextAlignment="Center"/>
                                            </Frame>
                                        </Grid>

                                        <!-- InformaciÃ³n de la cita -->
                                        <Grid ColumnDefinitions="Auto,*" 
                                              RowDefinitions="Auto,Auto,Auto"
                                              ColumnSpacing="10" 
                                              RowSpacing="5">

                                            <Label Grid.Row="0" Grid.Column="0" Text="ðŸ“…" FontSize="14"/>
                                            <Label Grid.Row="0" Grid.Column="1" 
                                                   Text="{Binding FechaServicioTexto}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>

                                            <Label Grid.Row="1" Grid.Column="0" Text="ðŸ•’" FontSize="14"/>
                                            <Label Grid.Row="1" Grid.Column="1" 
                                                   Text="{Binding HoraServicioTexto}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>

                                            <Label Grid.Row="2" Grid.Column="0" Text="ðŸ’°" FontSize="14"/>
                                            <Label Grid.Row="2" Grid.Column="1" 
                                                   Text="{Binding PrecioTexto}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </Grid>


                                        <!-- Comentarios del cliente -->
                                        <Frame IsVisible="{Binding TieneComentarios}"
                                               BackgroundColor="#FFF3E0"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               Padding="10">
                                            <StackLayout>
                                                <Label Text="ðŸ’¬ Comentarios del cliente:"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="#F57C00"/>
                                                <Label Text="{Binding Comentarios}"
                                                       FontSize="12"
                                                       TextColor="#F57C00"
                                                       LineBreakMode="TailTruncation"/>
                                            </StackLayout>
                                        </Frame>

                                        <!-- Funcionario asignado o selector -->
                                        <Frame BackgroundColor="#E8F5E8"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               Padding="15">
                                            <StackLayout Spacing="10">
                                                <Label Text="ðŸ‘¨â€âš•ï¸ AsignaciÃ³n de Funcionario"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#2E7D32"/>

                                                <Label IsVisible="{Binding TieneFuncionarioAsignado}"
                                                       Text="{Binding FuncionarioAsignadoTexto}"
                                                       FontSize="12"
                                                       TextColor="#2E7D32"/>

                                                <StackLayout IsVisible="{Binding PuedeAsignar}">
                                                    <Picker ItemsSource="{Binding Source={x:Reference Name=cvReservas}, Path=BindingContext.FuncionariosDisponibles}"
                                                            ItemDisplayBinding="{Binding NombreCompleto}"
                                                            SelectedItem="{Binding FuncionarioSeleccionado}"
                                                            Title="Seleccionar funcionario..."
                                                            BackgroundColor="White"
                                                            TextColor="Black"/>

                                                    <Button Text="ðŸ“‹ Asignar Funcionario"
                                                            BackgroundColor="#4CAF50"
                                                            TextColor="White"
                                                            CornerRadius="8"
                                                            CommandParameter="{Binding .}"
                                                            Clicked="btnAsignarFuncionario_Clicked"
                                                            IsEnabled="{Binding PuedeAsignar}"/>
                                                </StackLayout>
                                            </StackLayout>
                                        </Frame>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>

        <!-- Cargando -->
        <ActivityIndicator x:Name="loadingIndicator"
                          Grid.Row="1"
                          IsVisible="False"
                          IsRunning="False"
                          Color="#3498DB"
                          Scale="1.5"/>

        <!-- BotÃ³n volver -->
        <Button x:Name="btnVolver" 
                Grid.Row="2"
                Text="ðŸ”™ Volver al Perfil"
                BackgroundColor="#95A5A6"
                TextColor="White"
                CornerRadius="0"
                HeightRequest="50"
                FontSize="16"
                FontAttributes="Bold"
                Clicked="btnVolver_Clicked"/>
    </Grid>
</ContentPage>
