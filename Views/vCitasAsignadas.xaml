<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KynosPetClub.Views.vCitasAsignadas"
             Title="Mis Citas Asignadas"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="20,10" Spacing="10" BackgroundColor="#F8F9FA">
            <Label Text="ðŸ‘¨â€âš•ï¸ Mis Citas Asignadas"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#2C3E50"/>

            <!-- Contador de citas -->
            <Label x:Name="lblContador"
                   Text="Cargando citas..."
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>

        <!-- Lista de citas -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsBusy}"
                     RefreshColor="#3498DB">
            <ScrollView>
                <StackLayout Padding="15,10">
                    <CollectionView x:Name="cvCitas"
                                    ItemsSource="{Binding Citas}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Margin="0,5">
                                    <Frame Padding="20,15" 
                                           CornerRadius="12" 
                                           HasShadow="True"
                                           BackgroundColor="White">

                                        <StackLayout Spacing="15">
                                            <!-- Header de la cita -->
                                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                                <StackLayout Grid.Column="0" Spacing="4">
                                                    <Label Text="{Binding Servicio.Nombre}"
                                                           FontSize="18"
                                                           FontAttributes="Bold"
                                                           TextColor="#2C3E50"/>
                                                    <Label Text="{Binding Mascota.Nombre, StringFormat='ðŸ¾ {0}'}"
                                                           FontSize="14"
                                                           TextColor="#7F8C8D"/>
                                                </StackLayout>

                                                <!-- Badge del estado -->
                                                <Frame Grid.Column="1"
                                                       BackgroundColor="{Binding EstadoColor}"
                                                       Padding="8,4"
                                                       CornerRadius="12"
                                                       HasShadow="False">
                                                    <Label Text="{Binding Estado}"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="White"
                                                           HorizontalTextAlignment="Center"/>
                                                </Frame>
                                            </Grid>

                                            <!-- InformaciÃ³n de la cita -->
                                            <!-- InformaciÃ³n de la cita -->
                                            <Grid ColumnDefinitions="Auto,*"
                                                  RowDefinitions="Auto,Auto,Auto"
                                                  ColumnSpacing="10"
                                                  RowSpacing="5">               

                                                <Label Grid.Row="0" Grid.Column="0" Text="ðŸ“…" FontSize="14"/>
                                                <Label Grid.Row="0" Grid.Column="1" 
                                                       Text="{Binding FechaServicio, StringFormat='{0:dd/MM/yyyy}'}"
                                                       FontSize="12"
                                                       TextColor="Gray"/>

                                                <Label Grid.Row="1" Grid.Column="0" Text="ðŸ•’" FontSize="14"/>
                                                <Label Grid.Row="1" Grid.Column="1" 
                                                       Text="{Binding FechaServicio, StringFormat='{0:HH:mm}'}"
                                                       FontSize="12"
                                                       TextColor="Gray"/>

                                                <Label Grid.Row="2" Grid.Column="0" Text="ðŸ’°" FontSize="14"/>
                                                <Label Grid.Row="2" Grid.Column="1" 
                                                       Text="{Binding Servicio.Precio, StringFormat='{0:C}'}"
                                                       FontSize="12"
                                                       TextColor="Gray"/>
                                            </Grid>

                                            <!-- InformaciÃ³n del cliente (nueva) -->
                                            <Frame BackgroundColor="#E3F2FD"
                                                   CornerRadius="8"
                                                   HasShadow="False"
                                                   Padding="15">
                                                <StackLayout Spacing="5">
                                                    <Label Text="ðŸ‘¤ InformaciÃ³n del Cliente"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="#1976D2"/>
                                                    <Label Text="{Binding ClienteNombre}"
                                                           FontSize="12"
                                                           TextColor="#1976D2"/>
                                                </StackLayout>
                                            </Frame>

                                            <!-- BotÃ³n de completar -->
                                            <Button Text="âœ… Marcar como Completado"
                                                    IsVisible="{Binding PuedeCompletar}"
                                                    BackgroundColor="#4CAF50"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    FontSize="14"
                                                    FontAttributes="Bold"
                                                    CommandParameter="{Binding .}"
                                                    Clicked="btnCompletar_Clicked"/>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <!-- Vista vacÃ­a -->
                        <CollectionView.EmptyView>
                            <StackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
                                <Label Text="ðŸ“‹"
                                       FontSize="48"
                                       HorizontalTextAlignment="Center"
                                       TextColor="Gray"/>
                                <Label Text="No tienes citas asignadas"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="Gray"/>
                                <Label Text="Las citas aparecerÃ¡n aquÃ­ cuando un administrador te las asigne"
                                       FontSize="14"
                                       HorizontalTextAlignment="Center"
                                       TextColor="Gray"/>
                            </StackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Loading indicator -->
        <ActivityIndicator x:Name="loadingIndicator"
                          Grid.Row="1"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          Color="#3498DB"
                          Scale="1.5"/>

        <!-- Footer con botÃ³n volver -->
        <Button x:Name="btnVolver" 
                Grid.Row="2"
                Text="ðŸ”™ Volver"
                BackgroundColor="#95A5A6"
                TextColor="White"
                CornerRadius="0"
                HeightRequest="50"
                FontSize="16"
                FontAttributes="Bold"
                Clicked="btnVolver_Clicked"/>
    </Grid>
</ContentPage>