<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KynosPetClub.Controls"
             x:Class="KynosPetClub.Views.vHistorial"
             Title="Historial">

    <Grid RowDefinitions="*,Auto">
        <!-- Contenido principal -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Encabezado -->
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Spacing="10">
                    <Label Text="ðŸ“–"
                           FontSize="28"
                           VerticalTextAlignment="Center" />
                    <Label Text="Historial de Reservas"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#4B8A8B"
                           VerticalTextAlignment="Center" />
                </StackLayout>

                <!-- Filtros -->
                <Frame BackgroundColor="White"
                       Padding="10"
                       CornerRadius="15"
                       HasShadow="True"
                       BorderColor="#E0E0E0">
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                        <Button Text="âœ… Completados"
                                BackgroundColor="#E8F5E9"
                                TextColor="#2E7D32"
                                CornerRadius="20"
                                FontSize="14"
                                Clicked="btnFiltroSeleccionado_Clicked"/>
                        <Button Text="âŒ Cancelados"
                                BackgroundColor="#FFEBEE"
                                TextColor="#C62828"
                                CornerRadius="20"
                                FontSize="14"
                                Clicked="btnFiltroSeleccionado_Clicked"/>
                    </HorizontalStackLayout>
                </Frame>

                <!-- Lista de historial -->
                <CollectionView ItemsSource="{Binding Reservas}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15"
                                   CornerRadius="15"
                                   BackgroundColor="White"
                                   HasShadow="True"
                                   BorderColor="#A5C9CA"
                                   Margin="0,5">
                                <VerticalStackLayout Spacing="8">
                                    <!-- Encabezado -->
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <Label Grid.Column="0"
                                               Text="ðŸ“Œ"
                                               FontSize="16"
                                               VerticalTextAlignment="Center"/>

                                        <Label Grid.Column="1"
                                               Text="{Binding Servicio.Nombre}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#4B8A8B"
                                               VerticalTextAlignment="Center"/>

                                        <Label Grid.Column="2"
                                               Text="{Binding Estado}"
                                               FontAttributes="Bold"
                                               TextColor="Orange"
                                               VerticalTextAlignment="Center"
                                               HorizontalTextAlignment="End"/>
                                    </Grid>


                                    <!-- Fecha -->
                                    <StackLayout Orientation="Horizontal" Spacing="6">
                                        <Label Text="ðŸ“…" FontSize="14" />
                                        <Label Text="{Binding FechaServicio, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                               TextColor="#666"
                                               FontSize="14"/>
                                    </StackLayout>

                                    <!-- Comentarios -->
                                    <StackLayout Orientation="Horizontal" Spacing="6" IsVisible="{Binding Comentarios}">
                                        <Label Text="ðŸ’¬" FontSize="14"/>
                                        <Label Text="{Binding Comentarios}"
                                               FontSize="14"
                                               TextColor="#666"
                                               FontAttributes="Italic"/>
                                    </StackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>


        <!-- Barra de navegaciÃ³n inferior -->
        <controls:BottomNavBar x:Name="bottomNavBar" 
                               Grid.Row="1" 
                               Usuario="{Binding Usuario}"/>
    </Grid>
</ContentPage>