<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KynosPetClub.Views.vLogIn"
             BackgroundColor="White"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

       
            <Label Text="Kynos Guardería: ¡Diversión y cuidado garantizado!"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />

        
            <Image Source="kynos_logo.png" HeightRequest="200" HorizontalOptions="Center" />

       
            <Label Text="Crear una cuenta" FontSize="18" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Label Text="Introduce tu email para registrarte" FontSize="14" HorizontalTextAlignment="Center"/>

            <Entry Placeholder="email@example.com"
                   Keyboard="Email"
                   BackgroundColor="White"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   HeightRequest="40"
                   Margin="0,0,0,10" />


            <Button Text="Continuar"
                    BackgroundColor="#FFC107"
                    TextColor="Black"
                    CornerRadius="5"
                    HeightRequest="45"/>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,20" />


            <Button Text="Continuar con Google"
                    BackgroundColor="#A6E3E9"
                    TextColor="Black"
                    CornerRadius="5"
                    HeightRequest="45"/>


            <Button Text="Continuar con Apple"
                    BackgroundColor="#A6E3E9"
                    TextColor="Black"
                    CornerRadius="5"
                    HeightRequest="45"/>


            <Label FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Al hacer clic en continuar, acepta nuestros " />
                        <Span Text="Términos de servicio" FontAttributes="Bold" />
                        <Span Text=" y " />
                        <Span Text="Política de privacidad" FontAttributes="Bold" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
