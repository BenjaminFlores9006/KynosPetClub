                                                   TextColor="#1976D2"
                                                   VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <Label Text="ðŸ’°"
                                                   FontSize="18"
                                                   VerticalTextAlignment="Center" />
                                            <Label Text="{Binding Precio}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="#4CAF50"
                                                   VerticalTextAlignment="Center" />
                                        </StackLayout>
                                    </StackLayout>

                                    <!-- BotÃ³n de pagar -->
