<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KynosPetClub.Views.vPerfil"
             Title="Perfil">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Hora (simulada) -->
                <Label Text="9:41"
                       FontSize="16"
                       TextColor="Black"
                       HorizontalOptions="End"/>

                <!-- Saludo -->
                <Label Text="Hola, Benjamin"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black"/>

                <!-- Información del usuario -->
                <Frame BackgroundColor="#F7F7F7" Padding="15" CornerRadius="10" HasShadow="False">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding UserName}"
                               FontSize="18"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding UserEmail}"
                               FontSize="14"
                               TextColor="Gray"/>

                        <!-- Botón Editar Perfil -->
                        <Button Text="Editar Perfil"
                                BackgroundColor="Transparent"
                                TextColor="#007AFF"
                                BorderColor="#007AFF"
                                BorderWidth="1"
                                CornerRadius="10"
                                HorizontalOptions="Start"
                                Padding="20,5"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Sección de mascotas -->
                <Label Text="Tus Mascotas"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"/>

                <!-- Grid de mascotas -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">
                    <!-- Fila 1 - Títulos -->
                    <Label Text="Perro" Grid.Column="0" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Text="Gato" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="Center"/>

                    <!-- Fila 2 - Mascotas -->
                    <Frame Grid.Row="1" Grid.Column="0" CornerRadius="10" HasShadow="True" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="dog_icon.png" HeightRequest="60" WidthRequest="60"/>
                            <Label Text="Rosie" FontSize="16" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="1" CornerRadius="10" HasShadow="True" Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="cat_icon.png" HeightRequest="60" WidthRequest="60"/>
                            <Label Text="Coco" FontSize="16" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Botón Añadir Mascota -->
                <Button Text="+ Añadir mascota"
                        BackgroundColor="#9EFFAC"
                        TextColor="Black"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        HeightRequest="50"/>

                <!-- Sección adicional para perfil completo -->
                <Frame BackgroundColor="#F7F7F7" Padding="15" CornerRadius="10" HasShadow="False">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Configuración"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <HorizontalStackLayout Spacing="10">
                            <Image Source="notification_icon.png" HeightRequest="30"/>
                            <Label Text="Notificaciones" VerticalOptions="Center"/>
                            <Switch IsToggled="True" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Image Source="location_icon.png" HeightRequest="30"/>
                            <Label Text="Ubicación guardada" VerticalOptions="Center"/>
                            <Image Source="chevron_right.png" HeightRequest="20" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Image Source="payment_icon.png" HeightRequest="30"/>
                            <Label Text="Métodos de pago" VerticalOptions="Center"/>
                            <Image Source="chevron_right.png" HeightRequest="20" HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Botón Cerrar Sesión -->
                <Button Text="Cerrar Sesión"
                        TextColor="Red"
                        BackgroundColor="Transparent"
                        BorderColor="Red"
                        BorderWidth="1"
                        CornerRadius="10"
                        HeightRequest="50"/>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>