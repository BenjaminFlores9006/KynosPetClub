<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KynosPetClub.Controls"
             x:Class="KynosPetClub.Views.vPerfil"
             Title="Perfil"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto">
        <!-- Contenido principal -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Saludo -->
                <Label x:Name="lblSaludo"
                       Text="Â¡Hola!"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"/>

                <!-- Avatar del usuario centrado -->
                <Frame CornerRadius="75" 
                       HeightRequest="150" 
                       WidthRequest="150"
                       HorizontalOptions="Center"
                       HasShadow="True"
                       Padding="0"
                       Margin="0,10,0,20">
                    <Image Source="avatarusuario.png"
                           Aspect="AspectFill"
                           HeightRequest="150"
                           WidthRequest="150"/>
                </Frame>

                <!-- InformaciÃ³n del usuario -->
                <Frame BackgroundColor="#F7F7F7" 
                       Padding="15"
                       CornerRadius="10" 
                       HasShadow="False">
                    <VerticalStackLayout Spacing="10">
                        <Label x:Name="lblNombre"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                        <Label x:Name="lblCorreo"
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalTextAlignment="Center"/>
                        <Label x:Name="lblFechaNac"
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalTextAlignment="Center"/>

                        <!-- BotÃ³n Editar Perfil -->
                        <Button x:Name="btnEditarPerfil"
                                Text="âœï¸ Editar Perfil"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                CornerRadius="10"
                                HorizontalOptions="Center"
                                Padding="20,10"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="40"
                                Margin="0,10,0,0"
                                Clicked="btnEditarPerfil_Clicked"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- SecciÃ³n de mascotas -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="ðŸ¾"
                           FontSize="20"/>
                    <Label Text="Tus Mascotas"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                </HorizontalStackLayout>

                <!-- CollectionView para mascotas -->
                <CollectionView x:Name="cvMascotas"
                               SelectionMode="None"
                               HeightRequest="350">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" 
                                        Span="2"
                                        VerticalItemSpacing="15"
                                        HorizontalItemSpacing="15"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="15" 
                                   HasShadow="True" 
                                   Padding="15"
                                   HeightRequest="250"
                                   MinimumWidthRequest="160"
                                   BackgroundColor="White">
                                <Grid RowDefinitions="*,Auto" VerticalOptions="FillAndExpand">

                                    <!-- Contenido principal con mÃ¡s espacio -->
                                    <VerticalStackLayout Grid.Row="0" Spacing="5" VerticalOptions="StartAndExpand">

                                        <!-- Imagen de la mascota -->
                                        <Frame CornerRadius="35"
                                               HeightRequest="80"
                                               WidthRequest="80"
                                               HorizontalOptions="Center"
                                               HasShadow="False"
                                               Padding="0"
                                               Margin="0,5,0,5">
                                            <Image Source="{Binding Foto}"
                                                   Aspect="AspectFill"
                                                   HeightRequest="80"
                                                   WidthRequest="80">
                                                <Image.Triggers>
                                                    <DataTrigger TargetType="Image" 
                                                                 Binding="{Binding Foto}" 
                                                                 Value="{x:Null}">
                                                        <Setter Property="Source" Value="default_pet.png"/>
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Image" 
                                                                 Binding="{Binding Foto}" 
                                                                 Value="">
                                                        <Setter Property="Source" Value="default_pet.png"/>
                                                    </DataTrigger>
                                                </Image.Triggers>
                                            </Image>
                                        </Frame>

                                        <!-- Nombre de la mascota -->
                                        <Label Text="{Binding Nombre}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               TextColor="Black"
                                               Margin="0,2,0,2"/>

                                        <!-- Raza -->
                                        <Label Text="{Binding Raza}"
                                               FontSize="12"
                                               TextColor="#666666"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               Margin="0,0,0,2"/>

                                        <!-- Fecha de nacimiento -->
                                        <Label Text="{Binding FechaNacimiento, StringFormat='Nac: {0:dd/MM/yyyy}'}"
                                               FontSize="11"
                                               TextColor="Gray"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"
                                               Margin="0,0,0,0"/>
                                    </VerticalStackLayout>

                                    <!-- Botones -->
                                    <Grid Grid.Row="1" 
                                          ColumnDefinitions="*,*" 
                                          ColumnSpacing="10"
                                          Margin="0,10,0,0"
                                          HorizontalOptions="Fill"
                                          VerticalOptions="End">

                                        <Button Grid.Column="0"
                                                Text="Editar"
                                                BackgroundColor="#FFC107"
                                                TextColor="Black"
                                                CornerRadius="8"
                                                FontSize="12"
                                                FontAttributes="Bold"
                                                HeightRequest="35"
                                                CommandParameter="{Binding .}"
                                                Clicked="btnEditarMascota_Clicked"/>

                                        <Button Grid.Column="1"
                                                Text="Eliminar"
                                                BackgroundColor="#FF5252"
                                                TextColor="White"
                                                CornerRadius="8"  
                                                FontSize="12"
                                                FontAttributes="Bold"
                                                HeightRequest="35"
                                                CommandParameter="{Binding .}"
                                                Clicked="btnEliminarMascota_Clicked"/>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- BotÃ³n AÃ±adir Mascota -->
                <Button x:Name="btnAgregarMascota"
                        Text="âž• AÃ±adir mascota"
                        BackgroundColor="#9EFFAC"
                        TextColor="Black"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        FontSize="16"
                        Clicked="btnAgregarMascota_Clicked"/>

                <!-- ConfiguraciÃ³n -->
                <Frame BackgroundColor="#F7F7F7"
                       Padding="15"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="âš™ï¸ ConfiguraciÃ³n"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="ðŸ””"
                                   FontSize="20"
                                   VerticalOptions="Center"/>
                            <Label Text="Notificaciones"
                                   VerticalOptions="Center"
                                   FontSize="14"/>
                            <Switch IsToggled="True"
                                    HorizontalOptions="EndAndExpand"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- BotÃ³n Cerrar SesiÃ³n -->
                <Button x:Name="btnCerrarSesion"
                        Text="ðŸšª Cerrar SesiÃ³n"
                        TextColor="White"
                        BackgroundColor="#FF5252"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        FontSize="16"
                        Clicked="btnCerrarSesion_Clicked"/>
                <Button x:Name="btnAdminOpciones"
                        Text="âš™ï¸ Opciones de Administrador"
                        BackgroundColor="#6A1B9A"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        FontSize="16"
                        IsVisible="False"
                        Clicked="btnAdminOpciones_Clicked"/>

                <Button x:Name="btnVerCitas"
                        Text="ðŸ“… Ver Citas Asignadas"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        FontSize="16"
                        IsVisible="False"
                        Clicked="btnVerCitas_Clicked"/>

                <!-- Espaciado adicional para evitar que el Ãºltimo elemento quede muy cerca de la barra -->
                <BoxView HeightRequest="15" Color="Transparent"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra de navegaciÃ³n inferior -->
        <controls:BottomNavBar x:Name="bottomNavBar" 
                               Grid.Row="1" 
                               Usuario="{Binding Usuario}"/>
    </Grid>
</ContentPage>