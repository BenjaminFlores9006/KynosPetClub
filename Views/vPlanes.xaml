<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KynosPetClub.Controls"
             x:Class="KynosPetClub.Views.vPlanes"
             Title="vPlanes">

    <Grid RowDefinitions="*,Auto">
        <!-- Contenido principal -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="10" Spacing="20">

                <Label Text="Membresias"
                       FontSize="20"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>

                <Border Stroke="#800080" 
                        StrokeThickness="1" 
                        BackgroundColor="White" 
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Padding="15">
                        <Label Text="PLAN BÁSICO"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="White"
                               BackgroundColor="#800080"
                               Padding="5"
                               HorizontalOptions="Center" />

                        <VerticalStackLayout Padding="0,10,0,0" Spacing="8">
                            <Label Text="✔ Consulta y evaluación clínica." />
                            <Label Text="✔ Hemograma." />
                            <Label Text="✔ Bioquímica sanguínea con estudio de 4 parámetros." />
                            <Label Text="✔ Análisis de orina completo con estudio del sedimento urinario." />
                        </VerticalStackLayout>

                        <BoxView HeightRequest="1" Color="DarkOliveGreen" Margin="0,10" />

                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout>
                                <Label Text="BÁSICO/mes" FontAttributes="Bold" />
                                <Label Text="$100 / Valor a cancelar" FontAttributes="Bold" />
                            </VerticalStackLayout>

                            <Button x:Name="btnPlan1"
                                    Text="AÑADIR"
                                    BackgroundColor="Orange"
                                    TextColor="White"
                                    Padding="10,5"
                                    CornerRadius="5"
                                    Margin="10,0,0,0"
                                    Grid.Column="1"
                                    Clicked="btnPlan1_Clicked"  />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Border Stroke="#800080" 
                        StrokeThickness="1" 
                        BackgroundColor="White" 
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Padding="15">
                        <Label Text="PLAN COMPLETO"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="White"
                               BackgroundColor="#800080"
                               Padding="5"
                               HorizontalOptions="Center" />

                        <VerticalStackLayout Padding="0,10,0,0" Spacing="8">
                            <Label Text="✔ Consulta y evaluación clínica." />
                            <Label Text="✔ Hemograma." />
                            <Label Text="✔ Bioquímica sanguínea con estudio de 4 parámetros." />
                            <Label Text="✔ Análisis de orina completo con estudio del sedimento urinario." />
                            <Label Text="✔ Test de detección de Leishmaniosis, Ehrlichiosis, Anaplasmosis y Microfilariosis." />
                            <Label Text="✔ Radiografía de tórax." />
                        </VerticalStackLayout>

                        <BoxView HeightRequest="1" Color="DarkOliveGreen" Margin="0,10" />

                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout>
                                <Label Text="COMPLETO/mes" FontAttributes="Bold" />
                                <Label Text="$200 / Valor a cancelar" FontAttributes="Bold" />
                            </VerticalStackLayout>

                            <Button x:Name="btnPlan2"
                                    Text="AÑADIR"    
                                    BackgroundColor="Orange"
                                    TextColor="White"
                                    Padding="10,5"
                                    CornerRadius="5"
                                    Margin="10,0,0,0"
                                    Grid.Column="1"
                                    Clicked="btnPlan2_Clicked"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Espaciado adicional para evitar que el último elemento quede muy cerca de la barra -->
                <BoxView HeightRequest="15" Color="Transparent"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra de navegación inferior -->
        <controls:BottomNavBar x:Name="bottomNavBar" 
                               Grid.Row="1" 
                               Usuario="{Binding Usuario}"/>
    </Grid>
</ContentPage>