<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KynosPetClub.Views.vPlanes"
             Title="vPlanes">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">

            <Label
            Text="Planes"
            FontSize="20"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

            <HorizontalStackLayout Padding="5" Spacing="5">
                <Picker x:Name="filtro" Title="Filtro" WidthRequest="40" TextColor="Black" />
                <Picker x:Name="clasificar" Title="Clasificar" WidthRequest="80" TextColor="Black"/>
            </HorizontalStackLayout>

            <Border Stroke="#800080" StrokeThickness="1" BackgroundColor="White" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Padding="15">
                    <Label Text="PLAN BÁSICO"
                   FontAttributes="Bold"
                   FontSize="16"
                   TextColor="White"
                   BackgroundColor="#800080"
                   Padding="5"
                   HorizontalOptions="Center" />

                    <VerticalStackLayout Padding="0,10,0,0" Spacing="8">
                        <Label Text="✔ Consulta y evaluación clínica." />
                        <Label Text="✔ Hemograma." />
                        <Label Text="✔ Bioquímica sanguínea con estudio de 4 parámetros." />
                        <Label Text="✔ Análisis de orina completo con estudio del sedimento urinario." />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="DarkOliveGreen" Margin="0,10" />

                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout>
                            <Label Text="BÁSICO/mes" FontAttributes="Bold" />
                            <Label Text="$100 / Valor a cancelar" FontAttributes="Bold" />
                        </VerticalStackLayout>

                        <Button x:Name="btnAñadir1"
                        Text="AÑADIR"
                        BackgroundColor="Orange"
                        TextColor="White"
                        Padding="10,5"
                        CornerRadius="5"
                        Margin="10,0,0,0"
                        Grid.Column="1"
                        Clicked="btnAñadir1_Clicked"  />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <Border Stroke="#800080" StrokeThickness="1" BackgroundColor="White" StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Padding="15">
                    <Label Text="PLAN COMPLETO"
                   FontAttributes="Bold"
                   FontSize="16"
                   TextColor="White"
                   BackgroundColor="#800080"
                   Padding="5"
                   HorizontalOptions="Center" />

                    <VerticalStackLayout Padding="0,10,0,0" Spacing="8">
                        <Label Text="✔ Consulta y evaluación clínica." />
                        <Label Text="✔ Hemograma." />
                        <Label Text="✔ Bioquímica sanguínea con estudio de 4 parámetros." />
                        <Label Text="✔ Análisis de orina completo con estudio del sedimento urinario." />
                        <Label Text="✔ Test de detección de Leishmaniosis, Ehrlichiosis, Anaplasmosis y Microfilariosis." />
                        <Label Text="✔ Radiografía de tórax." />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="DarkOliveGreen" Margin="0,10" />

                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout>
                            <Label Text="COMPLETO/mes" FontAttributes="Bold" />
                        </VerticalStackLayout>

                        <Button x:Name="btnAñadir2"
                        Text="AÑADIR"    
                        BackgroundColor="Orange"
                        TextColor="White"
                        Padding="10,5"
                        CornerRadius="5"
                        Margin="10,0,0,0"
                        Grid.Column="1"
                        Clicked="btnAñadir2_Clicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>