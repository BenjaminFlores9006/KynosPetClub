<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KynosPetClub.Controls"
             x:Class="KynosPetClub.Views.vReserva"
             BackgroundColor="#F5F5F5"
             Title="Mis Reservas">

    <Grid RowDefinitions="*,Auto">
        <!-- Contenido principal -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Header -->
                <VerticalStackLayout Spacing="15">
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center"
                                 Spacing="10">
                        <Label Text="ðŸ“…"
                               FontSize="28"
                               VerticalTextAlignment="Center" />
                        <Label Text="Mis Reservas Activas"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#2E7D32"
                               VerticalTextAlignment="Center" />
                    </StackLayout>
                    <Label Text="AquÃ­ puedes ver y gestionar tus citas programadas"
                           FontSize="14"
                           TextColor="#666"
                           HorizontalTextAlignment="Center" />

                    <!-- BotÃ³n Nueva Reserva -->
                    <Button Text="âž• Nueva Reserva"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="50"
                            FontSize="16"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            WidthRequest="200"
                            Margin="0,5,0,0"
                            Clicked="OnNuevaReservaClicked" />
                </VerticalStackLayout>

                <!-- Indicador de carga -->
                <StackLayout x:Name="loadingSection" 
                           IsVisible="False"
                           Spacing="15"
                           Padding="20">
                    <ActivityIndicator x:Name="loadingIndicator"
                                     IsVisible="False"
                                     IsRunning="False"
                                     Color="#4CAF50"
                                     HeightRequest="40" />
                    <Label Text="Cargando tus reservas..."
                           FontSize="16"
                           TextColor="#666"
                           HorizontalTextAlignment="Center" />
                </StackLayout>

                <!-- Lista de reservas -->
                <CollectionView x:Name="cvReservas"
                              ItemsSource="{Binding ReservasActivas}"
                              BackgroundColor="Transparent"
                              SelectionMode="None"
                              VerticalScrollBarVisibility="Never">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="15" 
                                   HasShadow="True" 
                                   Padding="0"
                                   Margin="0,8,0,8"
                                   BackgroundColor="White"
                                   BorderColor="#E0E0E0">

                                <!-- Contenido de la tarjeta -->
                                <StackLayout Padding="20" Spacing="12">

                                    <!-- Header con icono, nombre y estado -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Icono del servicio -->
                                        <Frame Grid.Column="0"
                                               BackgroundColor="#F0F8FF"
                                               CornerRadius="35"
                                               HeightRequest="70"
                                               WidthRequest="70"
                                               HasShadow="False"
                                               Padding="0"
                                               VerticalOptions="Start"
                                               HorizontalOptions="Center">
                                            <Label Text="ðŸ¥"
                                                   FontSize="28"
                                                   HorizontalTextAlignment="Center"
                                                   VerticalTextAlignment="Center"
                                                   TextColor="#2196F3" />
                                        </Frame>

                                        <!-- InformaciÃ³n principal -->
                                        <StackLayout Grid.Column="1" Spacing="6" Margin="15,0,10,0">
                                            <Label Text="{Binding Servicio.Nombre}"
                                                   FontSize="20"
                                                   FontAttributes="Bold"
                                                   TextColor="#2E7D32" />

                                            <StackLayout Orientation="Horizontal" Spacing="8">
                                                <Label Text="ðŸ’°"
                                                       FontSize="16"
                                                       VerticalTextAlignment="Center" />
                                                <Label Text="{Binding Servicio.Precio, StringFormat='{0:C}'}"
                                                       FontSize="18"
                                                       TextColor="#4CAF50"
                                                       FontAttributes="Bold"
                                                       VerticalTextAlignment="Center" />
                                            </StackLayout>
                                        </StackLayout>

                                        <!-- Estado de la reserva -->
                                        <Frame Grid.Column="2"
                                               BackgroundColor="{Binding ColorEstado}"
                                               CornerRadius="20"
                                               Padding="12,6,12,6"
                                               HasShadow="False"
                                               VerticalOptions="Start">
                                            <Label Text="{Binding Estado}"
                                                   TextColor="White"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   HorizontalTextAlignment="Center" />
                                        </Frame>
                                    </Grid>

                                    <!-- InformaciÃ³n de mascota y fecha -->
                                    <StackLayout Spacing="8" Margin="15,0,0,0">
                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <Label Text="ðŸ•"
                                                   FontSize="16"
                                                   VerticalTextAlignment="Center" />
                                            <Label Text="{Binding MascotaInfo}"
                                                   FontSize="16"
                                                   TextColor="#666"
                                                   VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <Label Text="ðŸ“…"
                                                   FontSize="16"
                                                   VerticalTextAlignment="Center" />
                                            <Label Text="{Binding FechaServicioFormateada}"
                                                   FontSize="16"
                                                   TextColor="#1976D2"
                                                   FontAttributes="Bold"
                                                   VerticalTextAlignment="Center" />
                                        </StackLayout>
                                    </StackLayout>

                                    <!-- AVISO DE PAGO PENDIENTE -->
                                    <Frame BackgroundColor="#FFF3E0"
                                           BorderColor="#FF9800"
                                           CornerRadius="10"
                                           Padding="15"
                                           Margin="0,10,0,0"
                                           HasShadow="False"
                                           IsVisible="{Binding MostrarPendientePago}">
                                        <StackLayout Orientation="Horizontal" Spacing="12">
                                            <Label Text="âš ï¸"
                                                   FontSize="16"
                                                   VerticalTextAlignment="Center" />
                                            <StackLayout HorizontalOptions="FillAndExpand">
                                                <Label Text="Pendiente de pago"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#E65100" />
                                                <Label Text="Realiza el pago desde la secciÃ³n 'Pagos'"
                                                       FontSize="12"
                                                       TextColor="#BF360C" />
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>

                                    <!-- Comentarios si existen -->
                                    <Frame BackgroundColor="#F8F9FA"
                                           CornerRadius="8"
                                           Padding="15"
                                           Margin="0,5,0,0"
                                           HasShadow="False"
                                           IsVisible="{Binding TieneComentarios}">
                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <Label Text="ðŸ“"
                                                   FontSize="14"
                                                   VerticalTextAlignment="Start" />
                                            <Label Text="{Binding Comentarios}"
                                                   FontSize="14"
                                                   TextColor="#666"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="FillAndExpand" />
                                        </StackLayout>
                                    </Frame>

                                    <!-- Separador -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#E0E0E0"
                                             Margin="0,15,0,10" />

                                    <!-- Botones de acciÃ³n -->
                                    <StackLayout Orientation="Horizontal"
                                                HorizontalOptions="End"
                                                Spacing="12">

                                        <Button Text="ðŸ‘ï¸ Ver Detalles"
                                                BackgroundColor="#2196F3"
                                                TextColor="White"
                                                CornerRadius="8"
                                                FontSize="13"
                                                Padding="15,8,15,8"
                                                CommandParameter="{Binding .}"
                                                Clicked="OnVerDetallesClicked" />

                                        <Button Text="âŒ Cancelar"
                                                BackgroundColor="#F44336"
                                                TextColor="White"
                                                CornerRadius="8"
                                                FontSize="13"
                                                Padding="15,8,15,8"
                                                CommandParameter="{Binding .}"
                                                Clicked="OnCancelarReservaClicked"
                                                IsVisible="{Binding PuedeCancelarse}" />
                                    </StackLayout>

                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Mensaje cuando no hay reservas -->
                <StackLayout x:Name="emptyStateLayout"
                           IsVisible="False"
                           VerticalOptions="CenterAndExpand"
                           Padding="40,60,40,40"
                           Spacing="20">

                    <Frame BackgroundColor="White"
                           CornerRadius="20"
                           Padding="30"
                           HasShadow="True">
                        <StackLayout Spacing="20">
                            <Label Text="ðŸ“…"
                                   FontSize="70"
                                   HorizontalTextAlignment="Center"
                                   TextColor="#E0E0E0" />
                            <Label Text="No tienes reservas activas"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="#666" />
                            <Label Text="Cuando tengas servicios pendientes o en curso, aparecerÃ¡n aquÃ­ para que puedas gestionarlos fÃ¡cilmente"
                                   FontSize="15"
                                   HorizontalTextAlignment="Center"
                                   TextColor="#888"
                                   LineBreakMode="WordWrap" />
                            <Button Text="ðŸ¥ Ver Servicios Disponibles"
                                    BackgroundColor="#4CAF50"
                                    TextColor="White"
                                    CornerRadius="12"
                                    HeightRequest="50"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    Margin="0,10,0,0"
                                    Clicked="OnVerServiciosClicked" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Espaciado adicional -->
                <BoxView HeightRequest="20" Color="Transparent"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra de navegaciÃ³n inferior -->
        <controls:BottomNavBar x:Name="bottomNavBar" 
                               Grid.Row="1" 
                               Usuario="{Binding Usuario}" />
    </Grid>
</ContentPage>