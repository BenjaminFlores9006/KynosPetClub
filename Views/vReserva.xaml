<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KynosPetClub.Views.vReserva"
             BackgroundColor="White"
             Title="Reservas">

    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Reservas"
                    FontSize="20"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"/>

                <Frame CornerRadius="10" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10">
                        <Image x:Name="imgServicio"
                           Grid.RowSpan="3"
                           HeightRequest="80"
                           WidthRequest="80"
                           Aspect="AspectFill"/>

                        <Label x:Name="lblNombreServicio"
                           Grid.Column="1"
                           FontSize="18"
                           FontAttributes="Bold"/>

                        <Label x:Name="lblPrecioServicio"
                           Grid.Column="1"
                           Grid.Row="1"
                           FontSize="16"
                           TextColor="#2E7D32"/>

                        <Label x:Name="lblDescripcionServicio"
                           Grid.Column="1"
                           Grid.Row="2"
                           FontSize="14"
                           TextColor="Gray"/>
                    </Grid>
                    
                </Frame>

                <Label Text="Selecciona la fecha:"
                   FontSize="14"/>
                <DatePicker x:Name="dpFecha"
                        MinimumDate="{Binding Today}"
                        Date="{Binding Today}"/>

                <Label Text="Selecciona la hora:"
                   FontSize="14"/>
                <TimePicker x:Name="tpHora"/>

                <Label Text="Selecciona tu mascota:"
                   FontSize="14"/>
                <Picker x:Name="pkMascotas"
                    Title="Selecciona una mascota"
                    ItemDisplayBinding="{Binding Nombre}"/>

                <Button x:Name="btnAgendar"
                    Text="Agendar cita"
                    BackgroundColor="#FFC107"
                    TextColor="Black"
                    CornerRadius="5"
                    HeightRequest="50"
                    Margin="0,30,0,0"
                    Clicked="btnAgendar_Clicked"/>
            </VerticalStackLayout>
        </ScrollView>


        <Grid Grid.Row="2" BackgroundColor="#B9F5F2" Padding="10,5" HeightRequest="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ImageButton Source="home.png" Grid.Column="0"
                     HorizontalOptions="Center"
                     HeightRequest="25" WidthRequest="25"
                     BackgroundColor="Transparent"
                     x:Name="btnInicio"
                     />

            <ImageButton Source="reserva.png" Grid.Column="1"
                     HorizontalOptions="Center"
                     HeightRequest="25" WidthRequest="25"
                     BackgroundColor="Transparent"
                     x:Name="btnReserva"
                     />

            <ImageButton Source="pagos.png" Grid.Column="2"
                     HorizontalOptions="Center"
                     HeightRequest="25" WidthRequest="25"
                     BackgroundColor="Transparent"
                     x:Name="btnPagos"
                     />

            <ImageButton Source="perfil.png" Grid.Column="3"
                     HorizontalOptions="Center"
                     HeightRequest="25" WidthRequest="25"
                     BackgroundColor="Transparent"
                     x:Name="btnPlanes"
                     />

            <ImageButton Source="perfil.png" Grid.Column="3"
                     HorizontalOptions="Center"
                     HeightRequest="25" WidthRequest="25"
                     BackgroundColor="Transparent"
                     x:Name="btnHistorial"
                     />

            <ImageButton Source="perfil.png" Grid.Column="3"
                     HorizontalOptions="Center"
                     HeightRequest="25" WidthRequest="25"
                     BackgroundColor="Transparent"
                     x:Name="btnPerfil"
                     />
        </Grid>
    </Grid>
</ContentPage>
