<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:KynosPetClub.Controls"
             x:Class="KynosPetClub.Views.vReserva"
             BackgroundColor="White"
             Title="Reservas">

    <Grid RowDefinitions="*,Auto">
        <!-- Contenido principal -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Reservas"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                <Frame CornerRadius="10" HasShadow="True" Padding="10">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10">
                        <Image x:Name="imgServicio"
                               Grid.RowSpan="3"
                               HeightRequest="80"
                               WidthRequest="80"
                               Aspect="AspectFill"/>

                        <Label x:Name="lblNombreServicio"
                               Grid.Column="1"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <Label x:Name="lblPrecioServicio"
                               Grid.Column="1"
                               Grid.Row="1"
                               FontSize="16"
                               TextColor="#2E7D32"/>

                        <Label x:Name="lblDescripcionServicio"
                               Grid.Column="1"
                               Grid.Row="2"
                               FontSize="14"
                               TextColor="Gray"/>
                    </Grid>
                </Frame>

                <Label Text="Selecciona la fecha:"
                       FontSize="14"/>
                <DatePicker x:Name="dpFecha"
                            MinimumDate="{Binding Today}"
                            Date="{Binding Today}"/>

                <Label Text="Selecciona la hora:"
                       FontSize="14"/>
                <TimePicker x:Name="tpHora"/>

                <Label Text="Selecciona tu mascota:"
                       FontSize="14"/>
                <Picker x:Name="pkMascotas"
                        Title="Selecciona una mascota"
                        ItemDisplayBinding="{Binding Nombre}"/>

                <Button x:Name="btnAgendar"
                        Text="Agendar cita"
                        BackgroundColor="#FFC107"
                        TextColor="Black"
                        CornerRadius="5"
                        HeightRequest="50"
                        Margin="0,30,0,0"
                        Clicked="btnAgendar_Clicked"/>

                <!-- Espaciado adicional para evitar que el último elemento quede muy cerca de la barra -->
                <BoxView HeightRequest="15" Color="Transparent"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra de navegación inferior -->
        <controls:BottomNavBar x:Name="bottomNavBar" 
                               Grid.Row="1" 
                               Usuario="{Binding Usuario}"/>
    </Grid>
</ContentPage>